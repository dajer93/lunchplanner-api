# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_secret_key_here
JWT_EXPIRATION=24h

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
# If using IAM Role on EC2, you can comment out the AWS_ACCESS_KEY and SECRET

# DynamoDB Tables
USERS_TABLE=LunchPlanner_Users
INGREDIENTS_TABLE=LunchPlanner_Ingredients
MEALS_TABLE=LunchPlanner_Meals
MEALPLANS_TABLE=LunchPlanner_MealPlans

# CORS Origin
CORS_ORIGIN=http://localhost:3001 